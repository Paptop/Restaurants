@page "{restaurantId:int}"

@model Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.RestaurantData.Name</h2>
<div>
    Id: @Model.RestaurantData.Id
</div>
<div>
    Location: @Model.RestaurantData.Location
</div>
<div>
    Cuisine: @Model.RestaurantData.Cuisine
</div>

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page="./List" class="btn btn-default">All Restaurants</a>